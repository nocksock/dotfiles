#!/usr/bin/env sh
display_name=$(niri msg -j outputs | jq '.[] | select(.current_mode) | .name' --raw-output)

if [[ "$display_name" == "DP-5" ]]; then
    width=33%
else
    width=50%
fi

niri msg action set-column-width $width
kitty -1 "${@}" >& /dev/null &
sleep 0.25
exec niri msg action set-column-width $width
