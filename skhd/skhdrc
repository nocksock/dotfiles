# modes
:: default   : ~/.config/sketchybar/plugins/skhd-mode default
:: yctrl   @ : ~/.config/sketchybar/plugins/skhd-mode yctrl
:: gaps    @ : ~/.config/sketchybar/plugins/skhd-mode gaps
:: layout  @ : ~/.config/sketchybar/plugins/skhd-mode layout

hyper - y ; yctrl
hyper - g ; gaps

layout < escape ; default
layout < return ; default

gaps < escape ; default
gaps < return ; default

yctrl < escape ; default
yctrl < return ; default

# ctrl+shift layer
# common window focussed actions

ctrl + cmd - left  : yabai -m window --warp west
ctrl + cmd - right : yabai -m window --warp east
ctrl + cmd - down  : yabai -m window --warp south
ctrl + cmd - up    : yabai -m window --warp north

ctrl + shift - left  : yabai -m window --swap west
ctrl + shift - right : yabai -m window --swap east
ctrl + shift - down  : yabai -m window --swap south
ctrl + shift - up    : yabai -m window --swap north

ctrl + shift - y     : yabai -m space --mirror y-axis

ctrl + shift - h : yabai -m window --focus west  || yabai -m display --focus west
ctrl + shift - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + shift - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + shift - l : yabai -m window --focus east  || yabai -m display --focus east

ctrl + shift - o    : yabai -m space --balance
ctrl + shift - i    : yabai -m window --ratio abs:0.66
ctrl + shift - u    : yabai -m window --ratio abs:0.33
ctrl + shift - p    : yabai -m window --ratio abs:0.5
ctrl + shift - z    : yabai -m window --toggle zoom-parent

ctrl + shift - f : yabai -m window --toggle native-fullscreen
ctrl + shift - 0x2C: yabai -m window --toggle split
ctrl + shift - w : yabai -m window --toggle float --grid 1:6:1:0:4:1
ctrl + shift - c : yabai -m window --toggle float --grid 6:8:2:1:4:4
ctrl + shift - t : yabai -m window --toggle float --toggle sticky --toggle topmost

ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6

# second screen (usually)
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9


# hyper layer

hyper - right : yabai -m window --insert east
hyper - left  : yabai -m window --insert west
hyper - up    : yabai -m window --insert north
hyper - down  : yabai -m window --insert south

# direct focus
hyper - x     : yabai -m window --focus recent

# navigate spaces
hyper - 1     : yabai -m space --focus 1
hyper - 2     : yabai -m space --focus 2
hyper - 3     : yabai -m space --focus 3
hyper - 4     : yabai -m space --focus 4
hyper - 5     : yabai -m space --focus 5
hyper - 6     : yabai -m space --focus 6
hyper - 7     : yabai -m space --focus 7
hyper - 8     : yabai -m space --focus 8
hyper - 9     : yabai -m space --focus 9

# app launcher
hyper - f      : ~/.config/skhd/apps/kitty launch-or-focus
hyper - return : ~/.config/skhd/apps/kitty new-window
hyper - o      : ~/.config/skhd/apps/obsidian launch-or-focus

# yctrl mode

yctrl < h : yabai -m window --focus west  || yabai -m display --focus west
yctrl < j : yabai -m window --focus south || yabai -m display --focus south
yctrl < k : yabai -m window --focus north || yabai -m display --focus north
yctrl < l : yabai -m window --focus east  || yabai -m display --focus east

yctrl < left   : yabai -m window --resize left:-64:0 || yabai -m window --resize right:-64:0
yctrl < right  : yabai -m window --resize left:64:0  || yabai -m window --resize right:64:0
yctrl < up     : yabai -m window --resize top:0:-64  || yabai -m window --resize bottom:0:-64
yctrl < down   : yabai -m window --resize top:0:64   || yabai -m window --resize bottom:0:64

yctrl < shift - left   : yabai -m window --resize right:-64:0  || yabai -m window --resize left:-64:0
yctrl < shift - right  : yabai -m window --resize right:64:0   || yabai -m window --resize left:64:0
yctrl < shift - up     : yabai -m window --resize bottom:0:-64 || yabai -m window --resize up:0:-64
yctrl < shift - down   : yabai -m window --resize bottom:0:64  || yabai -m window --resize up:0:64

yctrl < r : skhd --reload
yctrl < shift - r : skhd -r; brew services restart sketchybar ; brew services restart yabai

yctrl < 1 : yabai -m window --space 1
yctrl < 2 : yabai -m window --space 2
yctrl < 3 : yabai -m window --space 3
yctrl < 4 : yabai -m window --space 4
yctrl < 5 : yabai -m window --space 5
yctrl < 6 : yabai -m window --space 6

yctrl < b : yabai -m space --layout bsp
yctrl < f : yabai -m space --layout float
yctrl < x : yabai -m window --close

# gaps mode

gaps < k : yabai -m space --gap rel:8 --padding rel:8:8:8:8
gaps < j : yabai -m space --gap rel:-8 --padding rel:-8:-8:-8:-8

gaps < y : yabai -m space --gap abs:320 --padding abs:64:64:256:256
gaps < u : yabai -m space --gap abs:0 --padding abs:0:0:0:0
gaps < i : yabai -m space --gap abs:32 --padding abs:32:32:32:32
gaps < p : yabai -m space --gap abs:256 --padding abs:128:128:256:256
gaps < o : yabai -m space --gap abs:128 --padding abs:128:128:128:128

