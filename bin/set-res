#!/usr/bin/env bash

if [[ $1 == "lg" ]]; then
  niri msg output HDMI-A-1 mode "3440x1440@59.973"
  niri msg output HDMI-A-1 scale 1
  exit 0
fi

if [[ $1 == "hd" ]]; then
  niri msg output HDMI-A-1 mode "1920x1080@60"
  exit 0
fi

if [[ $1 == "mba" ]]; then
  niri msg output HDMI-A-1 mode "1680x1050@59.883"
  exit 0
fi


cat <<'EOF'
  missed arg

  eg:
    res.sh lg     ; # lg ultrawide
    res.sh mba    ; # macbook air
EOF
