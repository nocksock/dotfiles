#!/usr/bin/env bash
#
# tmux-findwin: a more useable window finder
#
# suggested mappings:
#   # fzf windows in current session
#   bind -r w popup -E -w 20% -h 20% $DOTDIR/bin/tmux-findwin
#   # fzf windows in all sessions
#   bind -r W popup -E $DOTDIR/bin/tmux-findwin -a
#

if [[ $1 == "-a" ]]; then
    selected_name=$(tmux list-windows -a -F '#S:#W'| fzf)
else
    selected_name=$(tmux list-windows -F '#W'| fzf)
fi

if [[ -z $selected_name ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]]; then
    tmux attach -t $selected_name
else
    tmux switch-client -t $selected_name
fi
